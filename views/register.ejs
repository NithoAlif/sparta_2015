<% include layout/header %>

<div class="container">
  <div class="row">
    <form class="col-md-6 col-md-offset-3" action="" method="POST"  enctype="multipart/form-data">
      <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" class="form-control" id="email" placeholder="Enter email" required name="email">
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" placeholder="Password" required name="password">
      </div>

      <div class="form-group">
        <label for="foto">Foto</label>
        <input type="file" id="foto" required name="foto">
      </div>

      <div class="form-group">
        <label for="nama">Nama lengkap</label>
        <input type="text" class="form-control" id="nama" placeholder="Nama lengkap" required name="nama_lengkap">
      </div>

      <div class="form-group">
        <label for="nama">Nama panggilan</label>
        <input type="text" class="form-control" id="nama" placeholder="Nama panggilan" required name="nama_panggilan">
      </div>

      <div class="form-group">
        <label for="nimTPB">NIM TPB</label>
        <input type="text" class="form-control" id="nimTPB" placeholder="NIM TPB" required name="nim_tpb">
      </div>

      <div class="form-group">
        <div>
          <label for="nimJurusan">Jurusan</label>
        </div>
        <div>
          <label>
            <input type="radio" id="Jurusan" placeholder="Jurusan" required name="jurusan" value="IF"> IF
          </label>
        </div>
        <div>
          <label>
            <input type="radio" id="Jurusan" placeholder="Jurusan" required name="jurusan" value="STI"> STI
          </label>
        </div>
      </div>

      <div class="form-group">
        <label for="noHP">Nomor HP</label>
        <input type="tel" class="form-control" id="noHP" placeholder="Nomor HP" required name="nomor_telepon">
      </div>

      <div class="form-group">
        <label for="akunTwitter">Twitter</label>
        <input type="text" class="form-control" id="akunTwitter" placeholder="Akun Twitter" required name="id_twitter">
      </div>

      <div class="form-group">
        <label for="akunFacebook">Facebook</label>
        <input type="text" class="form-control" id="akunFacebook" placeholder="Akun Facebook" required name="id_facebook">
      </div>

      <div class="form-group">
        <label for="akunLine">Line</label>
        <input type="text" class="form-control" id="akunLine" placeholder="Akun Line" required name="id_line">
      </div>

      <div class="form-group">
        <label for="alamatBandung">Alamat Bandung</label>
        <input type="text" class="form-control" id="alamatBandung" placeholder="Alamat Bandung" required name="alamat_bandung">
      </div>

      <div class="form-group">
        <label for="golonganDarah">Golongan darah</label>
        <input type="text" class="form-control" id="golonganDarah" placeholder="Golongan Darah" required name="golongan_darah">
      </div>

      <div class="form-group">
        <label for="riwayatPenyakit">Riwayat penyakit</label>
        <input type="text" class="form-control" id="riwayatPenyakit" placeholder="Riwayat Penyakit" required name="riwayat_penyakit">
      </div>

      <div class="form-group">
        <label for="riwayatPenyakit">Hasil Tes MBTI</label>
        <select class="form-control" id="riwayatPenyakit" placeholder="Riwayat penyakit" required name="mbti">
          <option value="ENFJ">ENFJ</option>
          <option value="INFJ">INFJ</option>
          <option value="ENFP">ENFP</option>
          <option value="INFP">INFP</option>
          <option value="INTJ">INTJ</option>
          <option value="ENTJ">ENTJ</option>
          <option value="INTP">INTP</option>
          <option value="ENTP">ENTP</option>
          <option value="ESFP">ESFP</option>
          <option value="ISFP">ISFP</option>
          <option value="ESFJ">ESFJ</option>
          <option value="ISFJ">ISFJ</option>
          <option value="ISTP">ISTP</option>
          <option value="ESTP">ESTP</option>
          <option value="ISTJ">ISTJ</option>
          <option value="ESTJ">ESTJ</option>
        </select>
      </div>

      <div class="form-group">
        <label for="tempatLahir">Tempat lahir</label>
        <input type="text" class="form-control" id="tempatLahir" placeholder="Tempat lahir" required name="tempat_lahir">
      </div>

      <div class="form-group">
        <label for="tanggalLahir">Tanggal lahir</label>
        <input type="date" class="form-control" id="tanggalLahir" placeholder="Tanggal lahir" required name="tanggal_lahir">
      </div>

      <div class="form-group">
        <label for="namaWali">Nama wali</label>
        <input type="text" class="form-control" id="namaWali" placeholder="Nama wali" required name="nama_wali">
      </div>

      <div class="form-group">
        <label for="kontakWali">Kontak wali</label>
        <input type="text" class="form-control" id="kontakWali" placeholder="Kontak wali" required name="kontak_wali">
      </div>

      <div class="form-group">
        <label for="daerahAsal">Asal daerah</label>
        <input type="text" class="form-control" id="daerahAsal" placeholder="Asal daerah" required name="asal_daerah">
      </div>

      <div class="form-group">
        <label for="smaAsal">Asal SMA</label>
        <input type="text" class="form-control" id="smaAsal" placeholder="Asal SMA" required name="asal_sma">
      </div>

      <div class="form-group">
        <label for="alamatRumah">Alamat rumah</label>
        <input type="text" class="form-control" id="alamatRumah" placeholder="Alamat rumah" required name="alamat_rumah">
      </div>

      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
</div>

<% include layout/footer %>